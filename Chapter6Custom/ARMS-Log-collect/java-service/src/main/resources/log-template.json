{
  "timestamp": { "$resolver": "timestamp", "pattern": "yyyy-MM-dd'T'HH:mm:ss.SSS'Z'", "timeZone": "UTC" },
  "level":     { "$resolver": "level", "field": "name" },

  "service":   { "$resolver": "mdc", "key": "service", "defaultValue": "java-service" },
  "env":       { "$resolver": "mdc", "key": "env", "defaultValue": "dev" },
  "version":   { "$resolver": "mdc", "key": "version", "defaultValue": "1.0.0" },

  "traceId":   { "$resolver": "mdc", "key": "traceId" },
  "spanId":    { "$resolver": "mdc", "key": "spanId", "defaultValue": "" },

  "category":  { "$resolver": "mdc", "key": "category" },
  "source":    { "$resolver": "mdc", "key": "source" },

  "protocol":  { "$resolver": "mdc", "key": "protocol" },
  "direction": { "$resolver": "mdc", "key": "direction" },
  "method":    { "$resolver": "mdc", "key": "method" },
  "path":      { "$resolver": "mdc", "key": "path" },

  "remoteService": { "$resolver": "mdc", "key": "remoteService", "defaultValue": "" },
  "peer":          { "$resolver": "mdc", "key": "peer", "defaultValue": "" },

  "status":    { "$resolver": "mdc", "key": "status", "defaultValue": "" },
  "costMs":    { "$resolver": "mdc", "key": "costMs", "defaultValue": "" },

  "message":   { "$resolver": "message", "stringified": true },

  "errorType":    { "$resolver": "mdc", "key": "errorType", "defaultValue": "" },
  "errorMessage": { "$resolver": "mdc", "key": "errorMessage", "defaultValue": "" },
  "errorStack":   { "$resolver": "mdc", "key": "errorStack", "defaultValue": "" }
}
